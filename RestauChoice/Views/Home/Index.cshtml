    <input type="submit" value="Envoyer" />
}

<div>Je suis la vue index lambda</div>
@Html.LabelFor(model => model.Resto.Nom)
@Html.TextBoxFor(model => model.Resto.Nom, new { style = "color:red" })
@Html.LabelFor(model => model.Resto.Adresse)
@Html.TextBoxFor(model => model.Resto.Adresse)
<input type="submit" value="Envoyer" />



<table>
    <tr>
        <th>
            Nom
        </th>
        <th>
            Adresse
        </th>
    </tr>
    @{
        foreach (var resto in Model.ListeDesRestos)
        {
            <tr>
                <td>@resto.Nom</td>
                <td>@resto.Adresse</td>
            </tr>
        }
    }

</table>

